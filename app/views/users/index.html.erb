<h1 class="text-center mt-4">Listado de usuarios</h1>

<div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
</div>

<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%= link_to user.username, user %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to gravatar_for(user, size: 150), user %>
            </h5>
            <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
            <%= link_to "Ver perfil", user, class: "btn btn-outline-success" %>
            <% if logged_in? && (user == current_user || current_user.admin?) %>
              <%= link_to "Editar perfil", edit_user_path(user), class: "btn btn-outline-info" %>
              <%= link_to "Borrar perfil", user_path(user), class: "btn btn-outline-danger", method: :delete, data: { confirm: "estÃ¡s seguro?"} %>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <small>
              Unido hace <%=time_ago_in_words(user.created_at) %>,
            </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="flickr_pagination mb-4">
  <%= will_paginate @users, :container => false %>
</div>
